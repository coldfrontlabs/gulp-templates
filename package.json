{
  "name": "@coldfrontlabs/gulp-templates",
  "version": "3.0.0",
  "description": "Templates for quick gulp task set-up.",
  "main": "index.js",
  "files": [
    "index.js",
    "src/"
  ],
  "scripts": {
    "preinstall": "npx npm-force-resolutions || true",
    "commit": "npx git cz",
    "lint": "npx eslint --ext .js --ignore-path .gitignore .",
    "fix": "npm run lint -- --fix",
    "prerelease": "npm run fix",
    "release": "git add src/. && git add index.js && npx standard-version -a",
    "prepare": "husky install"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/coldfrontlabs/gulp-templates.git"
  },
  "keywords": [
    "gulp",
    "templates",
    "eslint",
    "postcss",
    "stylelint"
  ],
  "author": "Coldfront Labs Inc.",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/coldfrontlabs/gulp-templates/issues"
  },
  "homepage": "https://github.com/coldfrontlabs/gulp-templates#readme",
  "dependencies": {
    "@babel/core": "^7.13.15",
    "autoprefixer": "^10.2.5",
    "cssnano": "^4.1.11",
    "gulp-babel": "^8.0.0",
    "gulp-clean-css": "^4.3.0",
    "gulp-dart-sass": "^1.0.2",
    "gulp-eslint": "^6.0.0",
    "gulp-postcss": "^9.0.0",
    "gulp-rename": "^2.0.0",
    "gulp-stylelint": "^13.0.0",
    "gulp-terser": "^2.0.1",
    "gulp-uglify-es": "^2.0.0",
    "postcss-discard-comments": "^4.0.2"
  },
  "devDependencies": {
    "@commitlint/cli": "^12.1.1",
    "@commitlint/config-conventional": "^12.1.1",
    "commitizen": "^4.2.3",
    "cz-conventional-changelog": "^3.3.0",
    "eslint": "7.23.0",
    "eslint-config-prettier": "^8.1.0",
    "eslint-config-standard": "^16.0.2",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-jsdoc": "^32.3.0",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^3.3.1",
    "eslint-plugin-promise": "^4.3.1",
    "gulp": "4.0.2",
    "husky": "^6.0.0",
    "prettier": "^2.2.1",
    "standard-version": "^9.2.0"
  },
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  },
  "peerDependencies": {
    "gulp": "^4.0.2"
  },
  "resolutions": {}
}
